{
  "name": "Greasemonkey",
  "version": "0.0.1",
  "scripts": {
    "test": "karma start karma.conf.js",
    "testonce": "karma start karma.conf.js --single-run || true",
    "coverage": "karma start karma.conf.js --coverage --single-run && echo file://$(echo $PWD/coverage/*/*.html)|sed -e 's/ /%20/g' || true"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-sinon-chrome": "^0.2.0",
    "mocha": "^3.1.2",
    "sinon-chrome": "^2.1.2"
  }
}
